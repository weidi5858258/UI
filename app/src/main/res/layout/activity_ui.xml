<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weidi.ui.UIActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_popupwindow"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Hello World!"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:background="@drawable/selector_click"
                app:layout_constraintBottom_toBottomOf="@+id/activity_ui"
                app:layout_constraintLeft_toLeftOf="@+id/activity_ui"
                app:layout_constraintRight_toRightOf="@+id/activity_ui"
                app:layout_constraintTop_toTopOf="@+id/activity_ui" />

            <ImageView
                android:id="@+id/iv_anim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:src="@mipmap/ic_launcher"
                android:background="@color/color_ffeeff44"
                app:layout_constraintBottom_toBottomOf="@+id/activity_ui"
                app:layout_constraintLeft_toLeftOf="@+id/activity_ui"
                app:layout_constraintRight_toRightOf="@+id/activity_ui"
                app:layout_constraintTop_toTopOf="@+id/activity_ui" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
